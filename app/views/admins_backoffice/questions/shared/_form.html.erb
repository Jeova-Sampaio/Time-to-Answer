<div class="row">
    <div class="col-lg-12">
        <h1 class="page-hearder"><%= action_message %></h1> 
    </div>
</div>

<div class="card shadow mb-4">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <div class="panel-body">
                <% if @question.errors.any? %>
                    <div class="alert alert-danger alert-dismissable">
                        <button type="buttton" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                        <ul>
                            <% @question.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                    <% end %>
                    <h1><%= "#{action_message} pergunta" %></h1>
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for([ :admins_backoffice, @question ], local: true) do |f| %>
                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_area :description, class:"form-control", placeholder:"Descrição da pergunta..." %>
                            </div>

                            <div class="form-group">
                                <%= f.label :subject_id %>
                                <%= f.collection_select(:subject_id, Subject.all, :id, :description, {}, {class:"form-control"}) %>
                            </div>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>